<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">
  <h1>History</h1>
</div>

<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">

  <table class="table bg-light ">
    <thead>
      <tr>
        <th scope="col">Section Name</th>
        <th scope="col">Semester</th>
        <th scope="col">Semester Type</th>
        <th scope="col">Student Name</th>
        <th scope="col">Course Name</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |section| %>
        <% section.enrollments.each do |enrollment| %>
            <% if enrollment.grade_id != 1 %>
                <td><%= section.section_name%>
                <td><%= section.semester.semester_no %></td>
                <td><%= section.semester.semester_type %></td>
                <td><%= enrollment.student.first_name %> <%= enrollment.student.last_name %></td>
                <td><%= section.course.course_title %></td>
            </tr>
               
            <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">
  <%= link_to "Back", teacher_dashboard_index_path, class:"btn btn-secondary" %>
</div>